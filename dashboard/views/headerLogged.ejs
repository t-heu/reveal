<%- include('head') %>

<nav class="navbar">
  <div class="logo">
    <div class="sub-logo"></div>
  </div>

  <div class="custom-control custom-switch">
    <input type="checkbox" class="custom-control-input" id="customSwitch1" <%= user.role ? onclick=`handleSubmitSwitchMaintenance(${user.role})` : null%>>
    <label class="custom-control-label" style="color: #d6d6d6;" for="customSwitch1">Maintenance</label>
  </div>

  <div class="profile" onclick="profileHeader()">
    <p><%= user.name %></p>
    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-chevron-down" fill="#ccc" xmlns="http://www.w3.org/2000/svg">
      <path fill-rule="evenodd" d="M1.646 4.646a.5.5 0 0 1 .708 0L8 10.293l5.646-5.647a.5.5 0 0 1 .708.708l-6 6a.5.5 0 0 1-.708 0l-6-6a.5.5 0 0 1 0-.708z"/>
    </svg>
    <div id="a" style="position: absolute; color: #d6d6d6; height: 50px; bottom: 200px; width: 100%; transition: 0.4s;">
      <a style="color: #d6d6d6; display: block; margin-bottom: 4px;" href="/logout">Exit</a>
      <form action="/delete/user/<%= user._id %>" method="POST">
        <a style="color: #dc3545;">Delete account</a>
      </form>
    </div>
  </div>
</nav>

